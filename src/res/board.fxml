<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>


<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="res.BoardController" stylesheets="res/style.css">

	<!-- TOP -->
	<top>
		<HBox alignment="CENTER">
			<Text id="title" text="CODENAMES"/>
		</HBox>
	</top>
	
	<!-- CENTER -->
	<center>
		<GridPane fx:id="board" alignment="center" hgap="10" vgap="10"> <!-- ENTER CARDS HERE --> </GridPane>
	</center>
	
	<!-- LEFT -->
	<left>	
		<VBox alignment="TOP_RIGHT">
		<padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
			<Button text="Reset"/>
		</VBox>
	</left>	
	
	<!-- RIGHT -->
	<right>	
		<VBox alignment="TOP_LEFT">
		<padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
			<Button fx:id="changeTurn" text="Change Turn"/>
		</VBox>
	</right>	

</BorderPane>

